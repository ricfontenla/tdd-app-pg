<% if @customer.errors.any? %>
  <p>Foram encontrados <%= @customer.errors.count %> error(s): </p>
  <ul>
    <% @customer.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>
<% end %>

<h1>Novo Cliente</h1>

<%= form_for @customer do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :email %>
  <%= form.text_field :email %>
  <%= form.label :phone %>
  <%= form.text_field :phone %>
  <%= form.label :avatar  %>
  <%= form.file_field :avatar %>
  <%= form.label :smoker %>
  <% { true: 'Sim', false: 'NÃ£o' }.each do |key, value| %>
    <%= form.radio_button :smoker, key %> <%= value %>
  <% end %>
  <%= form.submit 'Criar Cliente' %>
<% end %>
